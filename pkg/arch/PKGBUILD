# shellcheck shell=bash
# Maintainer: threadexio <pzarganitis at gmail dot com>
pkgname="zeus-bin"
pkgver="3.1.0"
pkgrel=1
pkgdesc="The containerized AUR helper"
url="https://github.com/threadexio/zeus"
arch=('x86_64')
license=('GPL3')
depends=('libssl.so' 'libcrypto.so')
optdepends=(
	'docker: docker container support'
)
conflicts=('zeus')
backup=('etc/zeus/zeus.toml')

package() {
	cd "${_zeus_repo:?}"
	cargo xtask install "${pkgdir:?}" release
}
