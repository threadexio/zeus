# shellcheck shell=bash
# Maintainer: threadexio <pzarganitis at gmail dot com>
_zeus_repo="$(realpath -e ./repo)"
_zeus_repo="${_zeus_repo:?repo path not set}"

pkgname="zeus-bin"
pkgver="$(make -sC "$_zeus_repo" version)"
pkgrel=1
pkgdesc="The containerized AUR helper"
url="https://github.com/threadexio/zeus"
arch=('x86_64')
license=('GPL3')
depends=('libssl.so' 'libcrypto.so')
optdepends=(
	'docker: docker container support'
)
conflicts=('zeus')
backup=('etc/zeus/zeus.toml')

package() {
	cd "$_zeus_repo" || exit 1
	make DESTDIR="${pkgdir:?}" PROFILE="${PROFILE:-release}" install
}
